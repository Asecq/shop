<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layoutDirection="ltr"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    card_view:cardCornerRadius="4dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/post_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/colorsforbar"
            android:textSize="23dp"
            />


        <ImageView
            android:id="@+id/post_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_name"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
        <View
            android:id="@+id/linevire2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/post_image"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#BF007A" />
        <TextView
            android:id="@+id/post_local"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baghdad"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:drawableEnd="@drawable/ic_location_on_black_24dp"
            android:padding="5dp"
            android:layout_below="@id/post_image"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/postmaintype"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textSize="18dp"
            android:textColor="#3F51B5"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:layout_below="@id/post_image"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/post_price"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/price"
            android:padding="5dp"
            android:layout_below="@id/post_image"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>


</androidx.cardview.widget.CardView>