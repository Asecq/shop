<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:layoutDirection="rtl"
    tools:context=".SelectActivity">

    <ImageView
        android:id="@+id/logo_selects"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/tower"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <View
        android:id="@+id/view_line_selecta"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_below="@id/logo_selects"
        />
    <TextView
        android:id="@+id/select_co_texta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line_selecta"
        android:layout_marginTop="10dp"
        android:text="أختار الماركة"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />

    <ListView
        android:id="@+id/listview_marka"
        android:layout_marginTop="20dp"
        android:cacheColorHint="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:layout_below="@id/select_co_texta"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</RelativeLayout>