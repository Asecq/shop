<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@color/colorAccent"
    tools:context=".userActivity">
    <ImageView

        android:id="@+id/applogo2"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/tower"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/app_solon2"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/applogo2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="معلومات حسابك"
        android:textColor="#A5734D"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:id="@+id/viewuser1"
        android:layout_below="@id/app_solon2"
        android:layout_marginTop="20dp"
        />
 <EditText
     android:id="@+id/infouser_name"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/viewuser1"
     android:layout_marginTop="30dp"
     android:gravity="center"
     android:text="Ali Mohammed"
     android:drawableStart="@drawable/ic_account2"
     android:layout_marginLeft="50dp"
     android:layout_marginRight="50dp"
     android:background="@drawable/inputs_desgin"
     android:padding="10dp"
     android:textColor="@color/white"
     />
    <EditText
        android:id="@+id/infouser_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infouser_name"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Ali Mohammed"
        android:drawableStart="@drawable/ic_call_black"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/inputs_desgin"
        android:padding="10dp"
        android:textColor="@color/white"
        />
    <EditText
        android:id="@+id/infouser_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infouser_phone"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Ali Mohammed"
        android:drawableStart="@drawable/ic_key"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/inputs_desgin"
        android:padding="10dp"
        android:textColor="@color/white"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/back_home"
        android:text="عودة للصفحة الرئيسية"
        android:layout_below="@+id/infouser_pass"
        android:layout_marginTop="30dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:background="@drawable/inputs_desgin"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:background="#003D5B"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="35dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:text="برمجة وتصميم القلعة الذهبية"
        android:layout_gravity="center"

        android:textColor="@color/white"

        />
    </LinearLayout>
</RelativeLayout>