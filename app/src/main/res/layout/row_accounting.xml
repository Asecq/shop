<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="40dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#E91E63"
            android:layout_marginRight="95dp"
            />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#E91E63"
            android:layout_marginRight="165dp"
            />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#E91E63"
            android:layout_marginRight="230dp"
            />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#E91E63"
            android:layout_marginRight="305dp"
            />


        <TextView
            android:layout_width="88dp"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:text="2020/01/10"
            android:textColor="@color/colorAccent"
            android:id="@+id/ac_time"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="65dp"
            android:textSize="12dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginRight="100dp"
            android:text="10000.00"
            android:id="@+id/ac_mden"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="60dp"
            android:textSize="12dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="169dp"
            android:textStyle="bold"
            android:text="10000.00"
            android:id="@+id/ac_daan"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="70dp"
            android:textSize="12dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginRight="233dp"
            android:text="10000.00"
            android:id="@+id/ac_price"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="100dp"
            android:textSize="12dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginRight="310dp"
            android:text=""
            android:id="@+id/ac_paian"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>